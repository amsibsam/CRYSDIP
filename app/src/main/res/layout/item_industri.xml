<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">
    
    <data>
        <variable
            name="itemViewModel"
            type="com.uny.crysdip.viewmodel.IndustriViewModel"/>
    </data>
<RelativeLayout
    android:id="@+id/item_industri_wrapper"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:padding="16dp"
    android:onClick="@{itemViewModel.viewIndustriDetailClickListener}">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_industri_item"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="16dp">
            <TextView
                android:id="@+id/tv_industri_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Qiscus"
                android:textSize="20sp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_marker"/>
                <TextView
                    android:id="@+id/tv_alamat"
                    android:layout_marginLeft="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jl. Petung No. 24, Sleman"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
</layout>